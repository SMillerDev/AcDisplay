<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lock screen -->
    <header android:fragment="com.achep.activedisplay.settings.LockscreenFragment"
        android:id="@+id/lockscreen_settings"
        android:title="@string/settings_lockscreen_title"
        android:icon="@drawable/ic_settings_lockscreen"/>

    <!-- Active mode -->
    <header android:fragment="com.achep.activedisplay.settings.ActiveFragment"
        android:id="@+id/active_settings"
        android:title="@string/settings_active_title"
        android:icon="@drawable/ic_settings_active"/>

    <!-- Breathing Mode -->
    <header android:fragment="com.achep.activedisplay.settings.BreathingFragment"
        android:id="@+id/breathing_settings"
        android:title="@string/settings_breathing_title"
        android:icon="@drawable/ic_settings_active"/>

    <!-- Notifications -->
    <header android:fragment="com.achep.activedisplay.settings.NotificationFragment"
        android:id="@+id/notification_settings"
        android:title="@string/settings_notification_title"
        android:icon="@drawable/ic_settings_notify"/>

    <!-- Interface -->
    <header android:fragment="com.achep.activedisplay.settings.InterfaceFragment"
        android:id="@+id/interface_settings"
        android:title="@string/settings_interface_title"
        android:icon="@drawable/ic_settings_interface"/>

    <!-- More -->
    <header android:fragment="com.achep.activedisplay.settings.MoreFragment"
        android:id="@+id/more_settings"
        android:title="@string/settings_more_title"/>

</preference-headers>