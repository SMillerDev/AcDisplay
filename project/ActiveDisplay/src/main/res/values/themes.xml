<resources>

    <!-- All device dependent modification goes here -->
    <style name="AppThemeBase" parent="android:Theme.Holo">
        <item name="dialogStyle">@style/Widget.Dialog</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>

        <!-- Dialog -->
        <item name="dialogTitleStyle">@style/Widget.Dialog.Title</item>
        <item name="dialogContentStyle">@style/Widget.Dialog.Content</item>
        <item name="textAppearanceDialogTitle">@style/TextAppearance.Dialog.Title</item>
        <item name="textAppearanceDialogMessage">@style/TextAppearance.Dialog.Message</item>
        <item name="textAppearanceDialogInfo">@style/TextAppearance.Dialog.Info</item>

        <!-- AcDisplay -->
        <item name="acDisplayClock">@style/AcDisplay.Clock</item>
        <item name="acDisplayClockSmall">@style/AcDisplay.Clock.Small</item>
        <item name="acDisplayStatus">@style/AcDisplay.Status</item>
        <item name="acDisplayNotificationTitle">@style/AcDisplay.Notification.Title</item>
        <item name="acDisplayNotificationMessage">@style/AcDisplay.Notification.Message</item>
        <item name="acDisplayNotificationSubtext">@style/AcDisplay.Notification.Subtext</item>
        <item name="acDisplayTimeoutProgressDrawable">@style/AcDisplayTimeoutProgressBar</item>
        <item name="acDisplayDotsDrawable">@drawable/progress_bar_dash_src</item>
    </style>

    <!-- All device dependent modification goes here -->
    <style name="AcDisplayThemeBase" parent="AppTheme"/>

    <style name="AcDisplayTheme" parent="AcDisplayThemeBase">
        <item name="android:inAnimation">@null</item>
        <item name="android:outAnimation">@null</item>

        <!-- Keyguard background -->
        <item name="android:windowBackground">@color/keyguard_background</item>
        <item name="android:colorBackground">@color/keyguard_background</item>

        <!-- Theme.Holo.NoActionBar.Fullscreen -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- All device dependent modification goes here -->
    <style name="AcDisplayTheme.WallpaperBase" parent="AcDisplayTheme"/>

    <style name="AcDisplayTheme.Wallpaper" parent="AcDisplayTheme.WallpaperBase">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/keyguard_background_semi</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="AcDisplayTheme.Wallpaper.WithShadow" parent="AcDisplayTheme.Wallpaper">
        <item name="acDisplayClock">@style/AcDisplay.Clock.WithShadow</item>
        <item name="acDisplayClockSmall">@style/AcDisplay.Clock.Small.WithShadow</item>
        <item name="acDisplayStatus">@style/AcDisplay.Status.WithShadow</item>
        <item name="acDisplayNotificationTitle">@style/AcDisplay.Notification.Title.WithShadow</item>
        <item name="acDisplayNotificationMessage">@style/AcDisplay.Notification.Message.WithShadow</item>
        <item name="acDisplayNotificationSubtext">@style/AcDisplay.Notification.Subtext.WithShadow</item>
        <item name="acDisplayTimeoutProgressDrawable">@style/AcDisplayTimeoutProgressBar.WithShadow</item>
        <item name="acDisplayDotsDrawable">@drawable/progress_bar_dash_withshadow_src</item>
    </style>

</resources>
